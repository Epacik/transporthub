<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Frontend"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:system="using:System"
             x:Class="Frontend.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <ResourceDictionary>
            <Thickness x:Key="NavigationViewContentMargin">0,44,0,0</Thickness>
            <system:String x:Key="AppName">Transport Hub</system:String>

            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Frontend/Styles/Colors.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <!--<FluentTheme />-->
        <sty:FluentAvaloniaTheme />
        
    </Application.Styles>
</Application>
